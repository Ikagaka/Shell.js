{
    "version": "2.0.0",
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "charset": "utf8",
        "declaration": true,
        "diagnostics": true,
        "emitBOM": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": false,
        "inlineSourceMap": false,
        "inlineSources": false,
        "isolatedModules": false,
        "jsx": "react",
        "listFiles": true,
        "locale": "en-us",
        //"mapRoot": null,
        "module": "commonjs",
        "moduleResolution": "classic",
        "newLine": "LF",
        "noEmit": false,
        "noEmitHelpers": false,
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        //"noImplicitUseStrict": false,
        "noLib": false,
        "noResolve": false,
        "outDir": "es5",
        //"outFile": null,
        "preserveConstEnums": true,
        "pretty": true,
        //"reactNamespace": "React",
        "removeComments": false,
        "rootDir": "src",
        "skipDefaultLibCheck": false,
        //"inlineSourceMap": fals,
        //"sourceMap": false,
        //"sourceRoot": "./src",
        "strictNullChecks": true,
        "stripInternal": false,
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"
        //"traceResolution": false
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "newLineCharacter": "\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": true,
        "placeOpenBraceOnNewLineForControlBlocks": true
    },
    "files": [
        "src/Component/Cuttlebone.tsx",
        "src/Component/Layer.tsx",
        "src/Component/Named.tsx",
        "src/Component/Scope.tsx",
        "src/Loader/Config.ts",
        "src/Loader/Shell.ts",
        "src/Loader/SurfaceDefinitionTree.ts",
        "src/Model/Canvas.ts",
        "src/Model/Config.ts",
        "src/Model/Cuttlebone.ts",
        "src/Model/Named.ts",
        "src/Model/Scope.ts",
        "src/Model/Shell.ts",
        "src/Model/Surface.ts",
        "src/Model/SurfaceDefinitionTree.ts",
        "src/Model/SurfaceRenderingTree.ts",
        "src/Renderer/BaseSurface.ts",
        "src/Renderer/Pattern.ts",
        "src/Renderer/Renderer.ts",
        "src/Sandbox/ComponentNamed.sandbox.tsx",
        "src/Sandbox/RendererPattern.sandbox.ts",
        "src/State/Cuttlebone.ts",
        "src/State/Named.ts",
        "src/State/Scope.ts",
        "src/State/Shell.ts",
        "src/State/Surface.ts",
        "src/Test/LoaderConfig.test.ts",
        "src/Test/LoaderSurfaceDefinitionTree.test.ts",
        "src/Test/RendererBaseSurface.test.ts",
        "src/Test/RendererRenderer.test.ts",
        "src/Test/Util.test.ts",
        "src/Test/UtilCache.test.ts",
        "src/Util/Cache.ts",
        "src/Util/index.ts",
        "src/Util/Logger.ts",
        //"src/index.ts",
        "typings/index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "bower_components"
    ]
}